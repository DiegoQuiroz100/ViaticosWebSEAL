
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .form-container {
            width: 800px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f5f5f5;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
        }

        .form-section {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            background-color: white;
        }

        label {
            display: inline-block;
            width: 120px;
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .buttons {
            text-align: right;
            margin-top: 20px;
        }

        .btn {
            padding: 8px 15px;
            margin-left: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Viaticos", FormMethod.Post))
    {
        <div class="form-container">
            <div class="form-row">
                <div class="form-group">
                    <label>Gerencia:</label>
                    @*@Html.DropDownList("Gerencia", null, new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    <label>Unidad:</label>
                    @*@Html.DropDownList("Unidad", null, new { @class = "form-control" })*@
                </div>
            </div>

            <div class="form-section">
                <h3>Vehículo</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label>Placa de rodaje:</label>
                        @*@Html.DropDownList("PlacaRodaje", null, new { @class = "form-control" })*@
                    </div>
                    <div class="form-group">
                        <label>Área Asignada:</label>
                        @*@Html.TextBox("AreaAsignada", null, new { @class = "form-control" })*@
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Marca:</label>
                        @*@Html.TextBox("Marca", null, new { @class = "form-control" })*@
                    </div>
                    <div class="form-group">
                        <label>Asignado:</label>
                        @*@Html.TextBox("Asignado", null, new { @class = "form-control" })*@
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Año:</label>
                        @*@Html.TextBox("Anio", null, new { @class = "form-control", type = "number" })*@
                    </div>
                    <div class="form-group">
                        <label>Estado:</label>
                        @*@Html.TextBox("Estado", null, new { @class = "form-control" })*@
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Tipo:</label>
                        @*@Html.TextBox("Tipo", null, new { @class = "form-control" })*@
                    </div>
                    <div class="form-group">
                        <label>Combustible:</label>
                        @*@Html.DropDownList("Combustible", null, new { @class = "form-control" })*@
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Horas:</label>
                        @*@Html.TextBox("Horas", "0", new { @class = "form-control", type = "number" })*@
                    </div>
                    <div class="form-group">
                        <label>Nro. vale:</label>
                        @*@Html.TextBox("NroVale", "0", new { @class = "form-control", type = "number" })*@
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3>Datos Grifo</h3>
                <div class="form-group">
                    <label>Grifo:</label>
                    @*@Html.DropDownList("Grifo", null, new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    <label>Sírvanse efectuar el despacho de:</label>
                    @*@Html.TextBox("CantidadDespacho", "0", new { @class = "form-control", type = "number" })*@
                    <span>Litros</span>
                </div>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Grabar
                </button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Salir
                </a>
            </div>
        </div>
    }
</body>
</html>
